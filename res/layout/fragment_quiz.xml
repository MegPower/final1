<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
        <TextView
            android:id="@+id/answerQuestionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="@string/answer_questions_string"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
       <LinearLayout
           android:id="@+id/row1LinearLayout"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginBottom="@dimen/spacing"
           android:orientation="horizontal" >

           <TextView
               android:id="@+id/ques1TextView"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:textAppearance="?android:attr/textAppearanceMedium" />

           <EditText
               android:id="@+id/q1editText"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:ems="10"
               android:inputType="number" >

               <requestFocus />
           </EditText>

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content" >

           <TextView
               android:id="@+id/ques2textView"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:text="Medium Text"
               android:textAppearance="?android:attr/textAppearanceMedium" />

           <EditText
               android:id="@+id/q2editText"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:ems="10"
               android:inputType="number" />

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content" >

           <TextView
               android:id="@+id/ques3textView"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:text="Medium Text"
               android:textAppearance="?android:attr/textAppearanceMedium" />

           <EditText
               android:id="@+id/q3editText"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:ems="10"
               android:inputType="number" />

       </LinearLayout>

       <LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="wrap_content" >

           <Button
               android:id="@+id/submitButton"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/submit_btn" />

           <Button
               android:id="@+id/resetButton"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/reset_btn" />

       </LinearLayout>

       <TextView
           android:id="@+id/resultsTextView"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Medium Text"
           android:textAppearance="?android:attr/textAppearanceMedium" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content" >

           <ImageView
               android:id="@+id/imageView1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_launcher" />

           <ImageView
               android:id="@+id/imageView2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_launcher" />

           <ImageView
               android:id="@+id/imageView3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_launcher" />

       </LinearLayout>

</LinearLayout>
